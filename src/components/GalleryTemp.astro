---
const { title = "Gallery Title", 
description = "This is the description of the gallery section of the portfolio website.", 
images = [] } = Astro.props;
---
    
<div data-gallery>
    <h3>{title}</h3>
    <p>{description}</p>
    <ul class="projects-grid">
        {images.map((image : { description: string; link: string;}, index: number) => (
            <li>
                <button class="gallery-element" type="button" data-index={index} aria-label={`Open ${image.description}`}>
                    <img src={image.link} 
                         alt={image.description}
                         loading="lazy"
                         decoding="async"
                         fetchpriority="low"
                         style="aspect-ratio: auto; width: 100%; height: auto; display: block;" />
                </button>
            </li>
        ))}
    </ul>
</div>

<div class="gallery-overlay" data-gallery-overlay hidden>
    <button class="gallery-close" type="button" aria-label="Close">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 6L6 18M6 6l12 12"/></svg>
    </button>
    <div class="gallery-wrapper">
        <button class="gallery-nav gallery-prev" type="button" aria-label="Previous">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
        </button>
        <div class="gallery-content">
            <img src="" alt="" data-gallery-image decoding="async" fetchpriority="high" style="object-fit: contain; aspect-ratio: auto; width: 100%; height: auto;" />
            <p class="gallery-caption" data-gallery-caption></p>
        </div>
        <button class="gallery-nav gallery-next" type="button" aria-label="Next">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
        </button>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const gallery = document.querySelector<HTMLElement>('[data-gallery]');
        const overlay = document.querySelector<HTMLElement>('[data-gallery-overlay]');
        if (!gallery || !overlay) return;
        
        const img = overlay.querySelector<HTMLImageElement>('[data-gallery-image]');
        const caption = overlay.querySelector<HTMLElement>('[data-gallery-caption]');
        const closeBtn = overlay.querySelector<HTMLButtonElement>('.gallery-close');
        const prevBtn = overlay.querySelector<HTMLButtonElement>('.gallery-prev');
        const nextBtn = overlay.querySelector<HTMLButtonElement>('.gallery-next');
        
        if (!img || !caption || !closeBtn || !prevBtn || !nextBtn) return;
        
        const data = Array.from(gallery.querySelectorAll<HTMLButtonElement>('.gallery-element')).map(btn => {
            const i = btn.querySelector('img');
            return { src: i?.src || '', alt: i?.alt || '' };
        });
        
        const imageCache = new Map<string, HTMLImageElement>();
        const preloadImage = (src: string) => {
            if (!src || imageCache.has(src)) return;
            const preImg = new Image();
            preImg.src = src;
            imageCache.set(src, preImg);
        };
        
        let idx = 0;
        const show = (i: number) => {
            idx = (i + data.length) % data.length;
            img.src = data[idx].src;
            img.alt = caption.textContent = data[idx].alt;
            prevBtn.disabled = nextBtn.disabled = data.length <= 1;
            preloadImage(data[(idx + 1) % data.length].src);
            preloadImage(data[(idx - 1 + data.length) % data.length].src);
        };
        
        const open = (i: number) => {
            show(i);
            overlay.hidden = false;
            overlay.classList.add('is-open');
            document.body.style.overflow = 'hidden';
        };
        
        const close = () => {
            overlay.hidden = true;
            overlay.classList.remove('is-open');
            document.body.style.overflow = '';
        };
        
        gallery.querySelectorAll<HTMLButtonElement>('.gallery-element').forEach(btn => 
            btn.addEventListener('click', () => open(parseInt(btn.dataset.index || '0', 10)), { passive: true })
        );
        
        closeBtn.addEventListener('click', close, { passive: true });
        overlay.addEventListener('click', e => e.target === overlay && close());
        prevBtn.addEventListener('click', e => (e.stopPropagation(), show(idx - 1)), { passive: false });
        nextBtn.addEventListener('click', e => (e.stopPropagation(), show(idx + 1)), { passive: false });
        
        document.addEventListener('keydown', e => {
            if (!overlay.classList.contains('is-open')) return;
            if (e.key === 'Escape') close();
            else if (e.key === 'ArrowLeft') show(idx - 1);
            else if (e.key === 'ArrowRight') show(idx + 1);
        });
        
        data.slice(0, 3).forEach(d => preloadImage(d.src));
    });
</script>
        
