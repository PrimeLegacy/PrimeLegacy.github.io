<style>
    .gallery-element {
        width: 100%;
        padding: 0;
        border: 1px solid #252b3a;
        background: transparent;
        cursor: pointer;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .gallery-element img {
        object-fit: contain;
        aspect-ratio: auto;
        width: 100%;
        height: auto;
        display: block;
    }
    
    .gallery-element:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 16px rgba(10, 12, 18, 0.3);
    }
    
    .gallery-overlay {
        position: fixed;
        inset: 0;
        background: rgba(8, 10, 14, 0.92);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        padding: 20px;
    }
    
    .gallery-overlay[hidden] { display: none; }
    
    .gallery-wrapper {
        display: flex;
        align-items: center;
        gap: 16px;
        max-width: 100%;
    }
    
    .gallery-content {
        display: flex;
        flex-direction: column;
        gap: 12px;
        max-width: min(1200px, 80vw);
        max-height: 85vh;
    }
    
    .gallery-content img {
        object-fit: contain;
        aspect-ratio: auto;
        max-width: 100%;
        max-height: 80vh;
        width: auto;
        height: auto;
        border-radius: 12px;
        border: 1px solid #2a3142;
    }
    
    .gallery-caption {
        text-align: center;
        color: #cbd5e1;
        font-size: 0.95rem;
        margin: 0;
    }
    
    .gallery-close, .gallery-nav {
        background: rgba(27, 32, 43, 0.85);
        border: 1px solid #252b3a;
        color: #cbd5e1;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        cursor: pointer;
        transition: all 0.2s;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .gallery-close:hover, .gallery-nav:hover:not(:disabled) {
        background: rgba(32, 38, 52, 0.95);
        border-color: #3b4252;
        color: #f3f4f6;
        transform: scale(1.05);
    }
    
    .gallery-close {
        position: absolute;
        top: 20px;
        right: 20px;
    }
    
    .gallery-close svg { width: 24px; height: 24px; }
    .gallery-nav svg { width: 28px; height: 28px; }
    .gallery-nav:disabled { opacity: 0.3; cursor: not-allowed; }
    
    @media (max-width: 768px) {
        .gallery-overlay { padding: 60px 10px 20px; }
        .gallery-close { top: 10px; right: 10px; width: 40px; height: 40px; }
        .gallery-wrapper { flex-direction: column; gap: 12px; }
        .gallery-content { max-width: 95vw; }
        .gallery-nav { width: 40px; height: 40px; }
    }
</style>