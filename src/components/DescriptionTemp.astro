---
const {
    preImageTitle = "Image Title",
    preImageDescription = "This is the pre-image description of the portfolio website.",
    image = "path/to/image1.jpg",
    imageSpecifier = "Image specifier",
    postImageDescription = "This is the post-image description of the portfolio website."
} = Astro.props;
---

<div class="description">
    <h3>{preImageTitle}</h3>
    <p class="preImageDescription">{preImageDescription}</p>
    {image.endsWith('.gif') ? (
        <img class="description-image" 
             src={image} 
             alt={preImageTitle}
             loading="lazy" 
             decoding="async"
             fetchpriority="low"
             style="aspect-ratio: auto; max-width: 100%; height: auto; display: block;" />
    ) : (
        <img class="description-image" 
             src={image} 
             alt={preImageTitle}
             loading="lazy" 
             decoding="async"
             fetchpriority="low"
             style="aspect-ratio: auto; max-width: 100%; height: auto; display: block;" />
    )}
    <p class="imageSpecifier">{imageSpecifier}</p>
    <p class="postImageDescription">{postImageDescription}</p>
</div>

<style>
    .preImageDescription { margin-bottom: 24px; }
    .postImageDescription { margin-bottom: 24px; }
    .description-image {
        object-fit: contain;
        display: block;
    }
</style>